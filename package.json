{
    "author": "Maxim Khokhryakov",
    "license": "MIT",
    "name": "stratum-player",
    "version": "0.1.0",
    "scripts": {
        "test": "parcel src/stratum/test.html",
        "autotest": "parcel src/stratum/autotest.html",
        "build": "cross-env NODE_ENV=production parcel build src/stratum/api.ts --detailed-report --global stratum --out-file stratum.js"
    },
    "devDependencies": {
        "parcel-plugin-static-files-copy": "^2.5.0",
        "typescript": "^4.0.3"
    },
    "dependencies": {
        "@types/fabric": "^3.6.8",
        "@types/pngjs": "^3.4.2",
        "fabric": "^4.2.0",
        "jszip": "git+https://github.com/khokm/jszip.git",
        "pngjs": "^5.0.0"
    },
    "prettier": {
        "endOfLine": "lf",
        "tabWidth": 4,
        "printWidth": 140
    },
    "staticFiles": {
        "watcherGlob": "**/*.zip"
    }
}
