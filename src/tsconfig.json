{
    "compilerOptions": {
        "module": "ES6",
        "moduleResolution": "node",
        "newLine": "LF",
        "target": "es5",
        "sourceMap": true,
        "declaration": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noEmitOnError": true,
        "downlevelIteration": true,
        "baseUrl": "."
    }
}
